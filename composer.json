{
    "name": "pyncer/validation",
    "type": "library",
    "description": "Pyncer library for validating data and values.",
    "homepage": "https://pyncer.com/validation",
    "license": "Unlicense",
    "require": {
        "php": ">=8.3",
        "pyncer/core": "^1.3.0",
        "pyncer/data": "^1.4.2",
        "pyncer/exception": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "files": ["src/autoload.php"],
        "psr-4": {
            "Pyncer\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pyncer\\Tests\\Validation\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/pyncerrc/pyncer-validation/issues",
        "source": "https://github.com/pyncerrc/pyncer-validation"
    },
    "extra" : {
        "branch-alias" : {
            "dev-main" : "1.3-dev"
        }
    }
}
